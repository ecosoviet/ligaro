---
import Layout from "../layouts/Layout.astro";
import { Content as IntroContent } from "./intro.md";
import { Content as PersonalContent } from "./personal.md";
import { Content as SocialismContent } from "./socialism.md";
import { Content as MutualAidContent } from "./mutual-aid.md";
import { Content as NgosContent } from "./ngos.md";
---

<Layout
  title="Timothy Brits"
  description="Links and ways to connect with Timothy Brits - social profiles, and more."
  type="website"
>
  <main>
    <IntroContent />
    <PersonalContent />
    <SocialismContent />
    <MutualAidContent />
    <NgosContent />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 512px;
    background: var(--color-card-bg);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    box-shadow: 0 4px 12px var(--shadow-card);
  }

  :global(h1) {
    text-align: center;
    color: var(--color-heading);
    margin-bottom: 1rem;
    font-weight: 700;
    font-size: 2.25rem;
    text-shadow: 0 2px 4px var(--shadow-text);
  }

  :global(h1 + p) {
    text-align: center;
    color: var(--color-text);
    margin-bottom: 3rem;
  }

  :global(.section-personal),
  :global(.section-socialism),
  :global(.section-mutual-aid),
  :global(.section-ngos) {
    margin-top: 2rem;
  }

  :global(.section-personal:first-of-type) {
    margin-top: 0;
  }

  :global(h2) {
    text-align: left;
    color: var(--color-heading);
    margin: 0 0 0.5rem 0;
    font-weight: 600;
    font-size: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid currentColor;
    position: relative;
  }

  :global(.section-personal h2) {
    color: var(--color-personal);
  }
  :global(.section-socialism h2) {
    color: var(--color-socialism);
  }
  :global(.section-mutual-aid h2) {
    color: var(--color-mutual-aid);
  }
  :global(.section-ngos h2) {
    color: var(--color-ngos);
  }

  :global(h2 + p) {
    text-align: left;
    color: var(--color-text-secondary);
    margin-bottom: 1.25rem;
    font-size: 0.95rem;
  }

  :global(ul) {
    list-style-type: none;
    padding: 0;
    margin-bottom: 2rem;
  }

  :global(li) {
    margin-bottom: 0.85rem;
  }

  :global(a) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--color-card-bg);
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-text);
    border: 1px solid var(--color-border);
    transition:
      background 0.25s ease,
      border-color 0.25s ease,
      color 0.25s ease,
      transform 0.25s ease,
      box-shadow 0.25s ease;
    box-shadow: 0 2px 4px var(--shadow-primary);
  }

  :global(a:hover) {
    background: var(--color-bg);
    text-decoration: none;
    transform: translateY(-3px);
    box-shadow: 0 6px 16px var(--shadow-primary-hover);
  }

  :global(a i) {
    font-size: 1.35em;
    flex: 0 0 1.4em;
    line-height: 1;
    text-align: center;
    color: var(--color-text-secondary);
    transition: color 0.3s ease;
  }

  :global(a span) {
    flex-grow: 1;
    text-align: center;
  }

  :global(.section-personal a) {
    border-color: var(--color-personal);
  }
  :global(.section-personal a:hover) {
    border-color: var(--color-personal-light);
    box-shadow: 0 6px 16px
      color-mix(in srgb, var(--color-personal) 20%, transparent);
  }
  :global(.section-personal a:hover i) {
    color: var(--color-personal);
  }

  :global(.section-socialism a) {
    border: 3px solid var(--color-socialism);
    padding: 0.65rem 0.95rem;
  }
  :global(.section-socialism a:hover) {
    border-color: var(--color-socialism-light);
    box-shadow: 0 6px 16px
      color-mix(in srgb, var(--color-socialism) 25%, transparent);
  }
  :global(.section-socialism a:hover i) {
    color: var(--color-socialism);
  }

  :global(.section-mutual-aid a) {
    border-color: var(--color-mutual-aid);
    background: color-mix(
      in srgb,
      var(--color-card-bg) 85%,
      var(--color-mutual-aid) 15%
    );
  }
  :global(.section-mutual-aid a:hover) {
    border-color: var(--color-mutual-aid-light);
    background: color-mix(
      in srgb,
      var(--color-bg) 80%,
      var(--color-mutual-aid) 20%
    );
    box-shadow: 0 6px 16px
      color-mix(in srgb, var(--color-mutual-aid) 25%, transparent);
  }
  :global(.section-mutual-aid a:hover i) {
    color: var(--color-mutual-aid);
  }

  :global(.section-ngos a) {
    border-color: var(--color-ngos);
  }
  :global(.section-ngos a i) {
    color: var(--color-ngos);
  }
  :global(.section-ngos a:hover) {
    border-color: var(--color-ngos-light);
    box-shadow: 0 6px 16px
      color-mix(in srgb, var(--color-ngos) 25%, transparent);
  }
  :global(.section-ngos a:hover i) {
    color: var(--color-ngos-light);
  }

  :global(a:focus-visible) {
    outline: 3px solid var(--color-accent);
    outline-offset: 4px;
    box-shadow: 0 0 0 4px var(--shadow-focus);
  }
</style>
