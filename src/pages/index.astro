---
import Layout from "../layouts/Layout.astro";
import { Content as BioContent } from "./bio.md";
---

<Layout
  title="Timothy Brits"
  description="Links and ways to connect with Timothy Brits - social profiles, and more."
  type="website"
>
  <main>
    <BioContent />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 500px;
  }

  :global(h1) {
    text-align: center;
    color: var(--color-heading);
    margin-bottom: 2rem;
  }

  :global(h2) {
    text-align: center;
    color: var(--color-heading);
    margin: 2rem 2rem;
  }

  :global(ul) {
    list-style-type: none;
    padding: 0;
  }

  :global(li) {
    margin-bottom: 0.85rem;
  }

  :global(a) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: color-mix(in srgb, var(--color-bg) 92%, var(--color-link) 8%);
    border-radius: 10px;
    text-decoration: none;
    color: var(--color-text);
    border: 1.5px solid var(--color-link);
    transition:
      background 0.25s ease,
      border-color 0.25s ease,
      color 0.25s ease,
      transform 0.25s ease,
      box-shadow 0.25s ease;
  }

  :global(a:hover) {
    background: #ffffff;
    border-color: var(--color-link-hover);
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
  }

  :global(a i) {
    font-size: 1.35em;
    flex: 0 0 1.4em;
    line-height: 1;
    text-align: center;
    color: var(--color-text-secondary);
    transition: color 0.3s ease;
  }

  :global(a span) {
    flex-grow: 1;
    text-align: center;
  }

  :global(a[href^="mailto:"]) {
    border-color: var(--color-accent);
  }
  :global(a[href^="mailto:"]:hover) i.ri-mail-line {
    color: var(--color-accent);
  }

  :global(a:focus-visible) {
    outline: 3px solid var(--color-accent);
    outline-offset: 4px;
    box-shadow: 0 0 0 4px rgba(217, 119, 6, 0.18);
  }

  :global(a:hover i.ri-github-line) {
    color: #24292f;
  }
  :global(a:hover i.ri-instagram-line) {
    color: #e1306c;
  }
  :global(a:hover i.ri-threads-line) {
    color: #000000;
  }
  :global(a:hover i.ri-news-line) {
    color: var(--color-link-hover);
  }
  :global(a:hover i.ri-mail-line) {
    color: var(--color-accent);
  }
</style>
